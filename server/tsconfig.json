{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017"
    ],

    "sourceMap": true,
    "outDir": "../dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node"

  },

  "exclude": [
    "node_modules",
    "build"
  ]

}
